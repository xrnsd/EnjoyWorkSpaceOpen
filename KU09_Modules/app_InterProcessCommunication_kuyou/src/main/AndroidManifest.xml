<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kuyou.ipc">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:process="com.kuyou.ipc"
        android:roundIcon="@mipmap/ic_launcher_round">

        <service
            android:name="kuyou.common.ipc.FrameRemoteService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="kuyou.common.ipc.FrameRemoteService" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>

        <receiver android:name="kuyou.common.ipc.ProcessAwaken">
            <intent-filter>
                <action android:name="action.remote.event.frame" />
            </intent-filter>
        </receiver>

    </application>
</manifest>